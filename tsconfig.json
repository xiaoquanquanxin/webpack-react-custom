{
  "compilerOptions": {
    "outDir": "./dist/",
    //source map
    "sourceMap": true,
    "noImplicitAny": true,
    //        "module": "es6",//??????? is necessary?
    //    "types": ["reflect-metadata","node", "lodash"],

    "allowJs": true,
    "jsx": "react",
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "types": [
      "reflect-metadata"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": [
        "web/components/*"
      ],
      "@componentsHomePage": [
        "web/components/home"
      ],

      "@componentsLogin": [
        "web/components/login"
      ],
      "@componentsContentPage": [
        "web/components/ContentPage"
      ],
      "@componentsHeader": [
        "web/components/header"
      ],
      "@componentsFooter": [
        "web/components/footer"
      ],
      "@routes": [
        "web/routes"
      ]
    }
  },
  "files": [
    "./src/web/index.tsx"
  ],
  "include": [
    "src"
  ],
  "exclude": [
    //排出不编译的目录
    "node_modules",
    "**/*.spec.ts"
  ]
}